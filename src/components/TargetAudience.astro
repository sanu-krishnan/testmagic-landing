---
import { TestTube, Code, Building2 } from "lucide-vue-next";

const audiences = [
  {
    icon: TestTube,
    title: "QA Engineers",
    description: "who want to move faster.",
  },
  {
    icon: Code,
    title: "Developers",
    description: "building or maintaining APIs.",
  },
  {
    icon: Building2,
    title: "Startups & Teams",
    description: "pushing rapid backend updates.",
  },
];
---

<div class="w-full">
  <div class="py-16 sm:pt-24 px-4 sm:px-6 max-w-7xl mx-auto rounded-xl">
    <h2
      class="text-2xl sm:text-3xl md:text-4xl font-medium text-center mb-3 md:mb-8"
    >
      Who's it for?
    </h2>

    <div class="flex flex-col md:flex-row gap-1 md:gap-2">
      {
        audiences.map((audience) => (
          <div class="group flex gap-3 flex-1 bg-card/80 group px-6 py-6 rounded-xl border hover:border-primary hover:shadow-md transition-all duration-300">
            <div class="text-4xl mb-4">
              <audience.icon class="w-8 h-8 group-hover:text-primary" />
            </div>
            <div>
              <h3 class="md: text-xl mb-1 group-hover:text-primary">
                {audience.title}
              </h3>
              <p class="text-sm md:text-base opacity-70">
                {audience.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
